
      <div id="main-content">
        <article itemscope itemtype="http://schema.org/BlogPosting">
          <h2 class="entry-title" itemprop="name headline">{{{ title }}}</h2>
          <div class="meta">
            Published on <time class="updated" datetime="{{ published_date }}" pubdate itemprop="datePublished">{{#long_date}}{{published_date}}{{/long_date}}</time> by Santiago M. Mola
          </div>

          <div class="entry-content" itemprop="articleBody">
            {{{content}}}
          </div>

          <aside role="meta">
            <div role="tags">
              <span role="icon" aria-hidden="true" class="icon-tag"></span><span>Tags:</span>
              {{#tags}}
                <a href="/tag/{{#downcase}}{{.}}{{/downcase}}">{{.}}</a>&nbsp;
              {{/tags}}
            </div>
            <div role="social_media">
            </div>
          </aside>

          <div class="disqus-block">
            <div id="disqus_thread"></div>
              <script type="text/javascript">
                {{! CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE }}
                var disqus_shortname = 'molaio';
                var disqus_identifier = '{{{ permalink }}}';
                var disqus_title = '{{ title }}';
                var disqus_url = 'http://mola.io{{{ permalink }}}';

                {{! DON'T EDIT BELOW THIS LINE }}
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
              </script>
              <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
              <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
            </div>
          </div>

        </article>
      </div>
